<html>
    <head>
        <meta charset="UTF-8"/>
        <title>Se connecter</title>
        <style>
            body
            {
                background: linear-gradient(0deg, rgba(28, 28, 28, 0.6), rgba(28, 28, 28, 0.6)),
                url({{ asset('img/fond_login.jpg') }}) center center / cover no-repeat;   
            }
        </style>
        {% block stylesheets %}
            {{ encore_entry_link_tags('reset') }}
            {{ encore_entry_link_tags('app') }}
            {{encore_entry_link_tags('login')}}
        {% endblock %}
    </head>
    <body>
        <main class="content">
            <h1>Connexion</h1>
            {% if error %}
                <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
             <div class="box-form">
                <div class="box-content">
                    <form action="{{ path('app_login') }}" method="post">

                        <div class="log-box">
                            <label for="username">Nom d'utilisateur:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                        </div>
                        
                        <div class="log-box">
                            <label for="password">Mot de passe:</label>
                            <input type="password" id="password" name="_password"/>
                        </div>
                            {# If you want to control the URL the user is redirected to on success
                            <input type="hidden" name="_target_path" value="{{ path('home')}}"/> #}

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="btn-primary">
                                <button type="submit">login</button>
                            </div>
                    </form>
                </div>
            </div>
        </main>
    </body>
</html>



