
{% extends "base.html.twig" %}

{% block title "Gestion client Boost'tic" %}

{% block stylesheets %}
	{{ parent()}}
	{{encore_entry_link_tags('home')}}
{% endblock %}

{% block body %}
	<h1>Nos clients</h1>
	<div class="container">
		<table style="text-align: center;">
			<thead>
				<tr>
					<th>client</th>
					<th>ville</th>
					<th>nom</th>
					<th>email</th>
					<th>téléphone</th>
				</tr>
			</thead>
			{% for customer in customers %}
				<tbody>
					<tr>
						<td> <a href={{path('page_customer', {id: customer.id})}}>{{customer.name}}</a></td>
						<td> {{customer.city}}</td>
						<td> {{customer.contacts[0].firstname}} {{customer.contacts[0].lastname}}</td>
						<td> {{customer.contacts[0].email}}</td>
						<td> {{customer.contacts[0].tel}}</td>
						<td>
							<i class="material-icons edit-icon" onclick="window.location.href = '{{path('page_edition_client', {id: customer.id})}}';">border_color</i>
						</td>
						<td>
							<button onclick="window.location.href = '{{path('page_creation_sale', {id: customer.id})}}';">Ajouter une vente</button>
						</td>
					</tr>
				</tbody>
			{% endfor %}
		</table>
		<button class="btn-primary" onclick="window.location.href = '{{path('page_creation_client')}}';">Ajouter un client</button>
		<button class="btn-primary" onclick="window.location.href = '{{path('page_creation_produit')}}';">Ajouter un produit</button>
		<button class="btn-primary" onclick="window.location.href = '{{path('page_creation_machine')}}';">Ajouter une machine</button>
		<button class="btn-primary" onclick="window.location.href = '{{path('page_creation_provider')}}';">Ajouter un fournisseur</button>
		<button class="btn-primary" onclick="window.location.href = '{{path('page_creation_providerOffer')}}';">Ajouter une offre de fournisseur</button>
	</div>
	
{% endblock %}