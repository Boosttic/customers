<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('reset') }}
            {{ encore_entry_link_tags('app') }}
            <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <img class="logo" src="{{ asset('build/images/logo.svg') }}" alt="logo">
            <div class="menu">
                <nav class="nav">
                    <ul>
                        <li><a href="{{ path('home') }}">Accueil</a></li>
                    </ul>
                </nav>
                {% if app.user %}
                    <span class="username">Bonjour {{ app.user }}</span>
                    <i class="material-icons logout-icon" onclick="window.location.href='{{ path('app_logout') }}';">logout</i>
                {% endif %}
            </div>
        </header>
        <main class="content">
            {% block body %}{% endblock %}
        </main>
        <footer class="footer">
            <img src="{{ asset('build/images/logo.svg') }}">
            <div class="copyright-text">
                <span>&copy; Copyright 2022.</span>
                <span>Tout droit réservé. Développé par Boost'tic</span>
            </div>
            <span class="version">v.0.0.1-dev</span>
        </footer>
    </body>
</html>