{% import _self as formMacros %}

{% macro ContactType(contact) %}
	<div class="row">
		<div class="col">
			<div class="name">
				{{form_label(contact.firstname)}}
			</div>
			<div class="add">
				{{form_errors(contact.firstname)}}
				{{form_widget(contact.firstname)}}
			</div>
		</div>
		<div class="col">
			<div class="name">
				{{form_label(contact.lastname)}}
			</div>
			<div class="add">
				{{form_errors(contact.lastname)}}
				{{form_widget(contact.lastname)}}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<div class="name">
				{{form_label(contact.email)}}
			</div>
			<div class="add">
				{{form_errors(contact.email)}}
				{{form_widget(contact.email)}}
			</div>
		</div>
		<div class="col">
			<div class="name">
				{{form_label(contact.tel)}}
			</div>
			<div class="add">
				{{form_errors(contact.tel)}}
				{{form_widget(contact.tel)}}
			</div>
		</div>
	</div>
	<div class="col">
		{{form_label(contact.is_main)}}
		{{form_errors(contact.is_main)}}
		{{form_widget(contact.is_main)}}
	</div>
{% endmacro %}

